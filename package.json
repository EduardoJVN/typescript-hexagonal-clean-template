{
  "name": "hexagonal-clean-template",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/app.js",
  "engines": {
    "node": ">=24.13.0"
  },
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "node scripts/build.js",
    "start": "node dist/app.js",
    "lint": "eslint --fix",
    "format": "prettier --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "yarn lint",
      "yarn format"
    ],
    "src/**/*.ts": [
      "vitest run --passWithNoTests" 
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.1",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^17.3.1",
    "esbuild": "^0.27.3",
    "esbuild-plugin-tsconfig-paths": "^1.0.2",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.56.1",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "pino": "^10.3.1",
    "zod": "^4.3.6"
  }
}
